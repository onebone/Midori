<!DOCTYPE html>
<html>
	<head>
		<title><%= global.translation['common']['restricted']['title'] %></title>

		<%- include('global'); %>
	</head>
	<body>
		<nav class="nav-wrapper orange lighten-2">
			<div class="container">
				<div class="brand-logo">
					<a href="#"><%= global.translation['error']['title'] %></a>
				</div>
			</div>
		</nav>

		<div class="container">
			<h2 class="orange-text"><%= global.translation['common']['restricted']['title'] %></h2>
			<div class="row">
				<form class="col s12" method="post">
					<div class="input-field col s12 m6 l6">
						<input id="username" name="username" type="text"></input>
						<label for="username">Username</label>
					</div>
					<div class="input-field col s12 m6 l6">
						<input id="password" name="password" type="password"></input>
						<label for="username">Password</label>
					</div>
					<div class="input-field col s12 center-align">
						<button class="btn waves-effect waves-light" type="submit"><%= global.translation['common']['restricted']['submit'] %></button>
					</div>
				</form>
				<%
				if(wrong){
				%>
				<div class="col s12 center-align">
					<p class="red-text"><%= global.translation['common']['restricted']['wrong-password'] %></p>
				</div>
				<%
				}
				%>
			</div>
		</div>
	</body>
</html>
